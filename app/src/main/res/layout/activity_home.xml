<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".HomeActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20px"
      android:orientation="vertical"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        app:srcCompat="@drawable/titulorecortado" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:weightSum="3">

      <TextView
          android:id="@+id/textViewTituloEmail"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="2"
          android:gravity="center"
          android:text="Email:" />

      <TextView
          android:id="@+id/textViewEmail"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:orientation="horizontal"
        android:weightSum="3">

      <TextView
          android:id="@+id/textViewTituloProveedor"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="2"
          android:gravity="center"
          android:text="Tipo de Sesi贸n:" />

      <TextView
          android:id="@+id/textViewProveedor"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:orientation="horizontal"
        android:weightSum="3">

      <TextView
          android:id="@+id/textViewTituloUsuario"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="2"
          android:gravity="center"
          android:text="Nombre de Usuario:" />

      <EditText
          android:id="@+id/editTextNombreUsuario"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:orientation="horizontal"
        android:weightSum="4">

      <TextView
          android:id="@+id/textViewTituloPuntuacionlocal"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="0.8"
          android:gravity="center"
          android:text="Puntuaci贸n Local:" />

      <TextView
          android:id="@+id/textViewPuntuacionGlobal"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1.2"
          android:gravity="center" />

      <TextView
          android:id="@+id/textViewTituloPuntuacionOnline"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="0.8"
          android:gravity="center"
          android:text="Puntuaci贸n Online:" />

      <TextView
          android:id="@+id/textViewPuntuacionLocal"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1.2"
          android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:weightSum="2">

      <Button
          android:id="@+id/buttonModificar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:backgroundTint="#039BE5"
          android:text="Modificar datos"
          android:textColor="#FFFFFF"
          android:textSize="12sp" />

      <Button
          android:id="@+id/buttonCerrarSesion"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:backgroundTint="#165FB1"
          android:text="Cerrar sesi贸n"
          android:textColor="#FFFFFF"
          android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:orientation="horizontal">

      <Button
          android:id="@+id/buttonSalir"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ir al Menu" />

    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>